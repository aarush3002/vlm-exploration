<!-- Launch file for the rrt-detector and the assigner -->


<launch>
    <arg name="eta" value="1.0"/>
    <arg name="Geta" value="15.0"/>
    <arg name="namespace" value=""/>

    <param name="namespace_init_count" value="1"/>


    <!-- <node pkg="rrt_exploration" type="global_rrt_detector" name="global_detector" output="screen">
        <param name="eta" value="$(arg Geta)"/>
        <param name="map_topic" value="$(arg namespace)/grid_map"/>
    </node>
    
    <node pkg="rrt_exploration" type="local_rrt_detector" name="local_detector" output="screen">
        <param name="eta" value="$(arg eta)"/>
        <param name="map_topic" value="$(arg namespace)/grid_map"/>
        <param name="robot_frame" value="base_frame"/>
    </node> -->

    <node pkg="rrt_exploration" type="frontier_opencv_detector.py" name="opencv_detector" output="screen">
        <param name="map_topic" value="$(arg namespace)/grid_map" />
        <param name="rate" value="2" /> 
    </node>
    
    
    <node pkg="rrt_exploration" type="filter.py" name="filter" output="screen">
        <param name="map_topic" value="$(arg namespace)/grid_map"/>
        <param name="info_radius" value="2.5"/> 
        <param name="costmap_clearing_threshold" value="70"/> 
        <param name="goals_topic" value="/detected_points"/>
        <param name="namespace" value=""/> 
        <param name="n_robots" value="1"/>
        <param name="rate" value="100"/>
    </node>
    
    <node pkg="rrt_exploration" type="assigner.py" name="assigner" output="screen">
        <param name="map_topic" value="$(arg namespace)/grid_map"/>
        <param name="global_frame" value="map"/>
        <param name="info_radius" value="2.5"/> 
        <param name="info_multiplier" value="3.0"/> <!--3--> 
        <param name="hysteresis_radius" value="3.0"/> <!--3.0-->
        <param name="hysteresis_gain" value="2.0"/> <!--2.0-->
        <param name="frontiers_topic" value="/filtered_points"/> 
        <param name="n_robots" value="1"/>
        <param name="namespace" value=""/>
        <param name="delay_after_assignement" value="0.5"/>
        <param name="rate" value="100"/>
    </node>
  
  <node pkg="ros_x_habitat" type="aarush_rrt_exploration_tracker.py" name="exploration_tracker" output="screen">
        <!-- Timeout in seconds to wait for a new goal before assuming exploration is complete.
             Should be slightly longer than explore_lite's progress_timeout. -->
        <param name="completion_timeout" value="180.0" /> <!--70-->
        
        <!-- The folder where the final summary map will be saved. -->
        <!-- <param name="output_folder" value="/home/aarush/final_rrt_results/2t7WUuJeko7/" /> -->
        <param name="output_folder" value="/home/aarush/final_opencv_results/8WUmhLawc2A/" />

        <!-- The map topic the tracker should subscribe to. -->
        <param name="map_topic" value="/grid_map" />
    </node>
</launch>