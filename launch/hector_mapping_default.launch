<?xml version="1.0"?>

<launch>
  <arg name="tf_map_scanmatch_transform_frame_name" default="odom"/>
  <!-- publish odom as a tf -->
  <arg name="base_frame" default="base_frame"/>
  <arg name="odom_frame" default="odom"/>
  <arg name="pub_map_odom_transform" default="true"/>
  <arg name="scan_subscriber_queue_size" default="5"/>
  <arg name="scan_topic" default="scan"/>
  <arg name="map_size" default="1024"/> <!--2048-->

  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" launch-prefix="xterm -e gdb -q -ex run --args" output="screen">

    <!-- Frame names -->
    <param name="map_frame" value="map" />
    <param name="base_frame" value="$(arg base_frame)" />
    <param name="odom_frame" value="odom" />

    <!-- Tf use -->
    <param name="pub_map_odom_transform" value="false"/>
    <param name="pub_map_scanmatch_transform" value="true"/> <!--true-->
    <param name="pub_odometry" value="true"/>

    <!-- Map size / start point -->
    <param name="map_resolution" value="0.050"/> <!--0.050-->
    <param name="map_size" value="1024"/> <!--2048-->
    <param name="map_multi_res_levels" value="2" /> <!--2-->

    <!-- Map update parameters -->
    <param name="map_update_distance_thresh" value="0.2"/> <!--0.2-->
    <param name="map_update_angle_thresh" value="0.01" /> <!--.06-->

    <!-- Advertising config -->
    <param name="scan_topic" value="$(arg scan_topic)"/>
  </node>

</launch>